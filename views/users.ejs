<!DOCTYPE html>
<html lang="en">

<head>
    <title>Users</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="container mt-3">
        <h2 class="text-center">Add users</h2>
        <form action="/add-user" method="post">
            <div class="mb-3 mt-3">
                <label for="email">Name:</label>
                <input type="name" class="form-control" id="name" placeholder="Enter Name" name="name">
            </div>
            <div class="mb-3 mt-3">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
            </div>
            <div class="mb-3">
                <label for="pwd">Mobile no.:</label>
                <input type="number" class="form-control" id="mob" placeholder="Enter Mobile number" name="mobile">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <hr>
        <div>
            <h1 class="text-center">Users list</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% usersList.forEach((user)=> { %>
                        <tr>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.mobile %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <button onclick="goToTasks(user.email)" class="btn btn-primary">See tasks</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>
<script>
    function goToTasks(userId) {
        console.log(userId);
        window.location.href = '/tasks';
    }
</script>

</html>